generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  UZIVATEL
}

model User {
  id                    String                 @id @default(cuid()) @map("_id")
  name                  String?
  email                 String?                @unique
  emailVerified         DateTime?
  image                 String?
  password              String?
  role                  UserRole               @default(UZIVATEL)
  dogName               String?
  accounts              Account[]
  isTwoFactorEnabled    Boolean                @default(false)
  twoFactorConfirmation TwoFactorConfirmation?
  visitData             VisitData[]            @relation("UserVisitData")
}

model Account {
  id                String  @id @default(cuid()) @map("_id")
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model VerificationToken {
  id      String   @id @default(cuid()) @map("_id")
  email   String
  token   String   @unique
  expires DateTime

  @@unique([email, token])
}

model PasswordResetToken {
  id      String   @id @default(cuid()) @map("_id")
  email   String
  token   String   @unique
  expires DateTime

  @@unique([email, token])
}

model TwoFactorToken {
  id      String   @id @default(cuid()) @map("_id")
  email   String
  token   String   @unique
  expires DateTime

  @@unique([email, token])
}

model TwoFactorConfirmation {
  id String @id @default(cuid()) @map("_id")

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId])
}

model News {
  id        String   @id @default(cuid()) @map("_id")
  title     String
  content   String?
  createdAt DateTime @default(now())
}

model Season {
  id        String      @id @default(cuid()) @map("_id")
  year      Int         @unique
  visitData VisitData[] @relation("SeasonVisitData")
}

model VisitData {
  id            String    @id @default(cuid()) @map("_id")
  visitDate     DateTime?
  fullName      String
  dogName       String?
  points        Int
  visitedPlaces String
  dogNotAllowed String?
  routeLink     String?
  year          Int       @map("seasonYear") // This remains for simplified queries
  extraPoints   Json
  isApproved    Boolean   @default(false)
  rejectionReason String?
  createdAt     DateTime? @default(now())

  // Relation to Season
  seasonId String?
  season   Season? @relation("SeasonVisitData", fields: [seasonId], references: [id], onDelete: Cascade)
  
  // Relation to User
  userId   String?
  user     User?   @relation("UserVisitData", fields: [userId], references: [id], onDelete: SetNull)
}

model Rules {
  id      String @id @map("_id")
  content String
  updatedAt DateTime @updatedAt
}
