generator client {
  provider = "prisma-client-js"
  engineType = "binary"
  binaryTargets = ["native", "rhel-openssl-1.0.x", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  UZIVATEL
  TESTER
}

enum VisitState {
  DRAFT
  PENDING_REVIEW
  APPROVED
  REJECTED
}

model User {
  id                    String                 @id @default(cuid()) @map("_id")
  name                  String?
  email                 String?                @unique
  emailVerified         Json?                  // Using Json to handle mixed DateTime/String types
  image                 String?
  password              String?
  role                  UserRole               @default(UZIVATEL)
  dogName               String?
  accounts              Account[]
  isTwoFactorEnabled    Boolean                @default(false)
  twoFactorConfirmation TwoFactorConfirmation?
  visitData             VisitData[]            @relation("UserVisitData")
  news                  News[]                 @relation("UserNews")
  isExemptFromDistanceLimit Boolean            @default(false)
  createdRoutes         CustomRoute[]          @relation("UserCreatedRoutes")
  freeCategoryUsage     Json?                  // Track weekly usage: [{ week, used, visitId }]
  categoryUsage         UserCategoryUsage[]
  exceptionRequests     ExceptionRequest[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid()) @map("_id")
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model VerificationToken {
  id      String   @id @default(cuid()) @map("_id")
  email   String
  token   String   @unique
  expires DateTime

  @@unique([email, token])
  @@map("verification_tokens")
}

model PasswordResetToken {
  id      String   @id @default(cuid()) @map("_id")
  email   String
  token   String   @unique
  expires DateTime

  @@unique([email, token])
  @@map("password_reset_tokens")
}

model TwoFactorToken {
  id      String   @id @default(cuid()) @map("_id")
  email   String
  token   String   @unique
  expires DateTime

  @@unique([email, token])
  @@map("two_factor_tokens")
}

model TwoFactorConfirmation {
  id String @id @default(cuid()) @map("_id")

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId])
  @@map("two_factor_confirmations")
}

model News {
  id        String   @id @default(cuid()) @map("_id")
  title     String
  slug      String?  @unique
  content   String?
  summary   String?
  published Boolean  @default(true)
  tags      Json?    // Array of strings
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  images    Json?    // Array of { url, public_id, title }
  
  // Author relation
  authorId  String?
  author    User?    @relation("UserNews", fields: [authorId], references: [id])

  @@map("news")
}

model Season {
  id        String      @id @default(cuid()) @map("_id")
  year      Int         @unique
  visitData VisitData[] @relation("SeasonVisitData")

  @@map("seasons")
}

model VisitData {
  id            String    @id @default(cuid()) @map("_id")
  visitDate     Json?     // Using Json to handle mixed DateTime/String types
  routeTitle    String?
  routeDescription String?
  dogName       String?
  points        Float     // Changed to Float
  visitedPlaces String
  dogNotAllowed String?
  routeLink     String?
  route         Json?     // { trackPoints: [{latitude, longitude, timestamp, speed, accuracy, heading, altitude, verticalAccuracy}], totalDistance, duration, startTime, endTime, source }
  year          Int       @map("seasonYear") // This remains for simplified queries
  extraPoints   Json      // { scoringModel, config, distanceKm, distancePoints, placePoints, peaks, towers, trees, places, totalPoints, durationMinutes }
  state         VisitState @default(DRAFT)
  rejectionReason String?
  createdAt     DateTime? @default(now())
  photos        Json?     // Array of { url: string, public_id: string, title: string }
  places        Json?     // Array of { id, name, type, photos: [{ id, url, public_id, title, description, uploadedAt, isLocal }], description, createdAt }
  extraData     Json?     // Dynamic form data: { fieldName: value }
  activityType  String?   @default("WALKING")
  isFreeCategory Boolean   @default(false)
  freeCategoryIcon String?
  strataCategoryId String?
  strataCategoryIcon String?

  // Relation to Season
  seasonId String?
  season   Season? @relation("SeasonVisitData", fields: [seasonId], references: [id], onDelete: Cascade)
  
  // Relation to User
  userId   String?
  user     User?   @relation("UserVisitData", fields: [userId], references: [id], onDelete: Cascade)

  // Relation to CustomRoute
  customRouteId String?
  customRoute   CustomRoute? @relation(fields: [customRouteId], references: [id])

  @@map("visits")
}

model MonthlyTheme {
  id        String   @id @default(cuid()) @map("_id")
  year      Int
  month     Int
  keywords  String[] // Array of 3 strings
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([year, month])
  @@map("monthly_themes")
}

model CustomRoute {
  id          String     @id @default(cuid()) @map("_id")
  title       String
  description String?
  link        String
  parts       Json?      // Required categories checklist
  creatorId   String
  creator     User       @relation("UserCreatedRoutes", fields: [creatorId], references: [id])
  status      VisitState @default(PENDING_REVIEW)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  visits      VisitData[] // Track who walked this route
  
  requiredCategoryId String?
  requiredCategory   StrataCategory? @relation(fields: [requiredCategoryId], references: [id])
  minDistanceKm      Float           @default(7.0)
  createdMonth       Int?            // Month of creation for limits tracking
  creatorBonusPoints Float           @default(0)

  @@map("custom_routes")
}

model StrataCategory {
  id        String        @id @default(cuid()) @map("_id")
  name      String        @unique // e.g., "SKALNÍ_ÚTVAR"
  label     String        // Czech name
  icon      String
  order     Int
  isActive  Boolean       @default(true)
  routes    CustomRoute[]
  usage     UserCategoryUsage[]

  @@map("strata_categories")
}

model UserCategoryUsage {
  id         String   @id @default(cuid()) @map("_id")
  userId     String
  categoryId String
  seasonYear Int?     // Optional for older data or grouping
  month      String   // Added for monthly limits (yyyy-MM)
  points     Int?     @default(1)
  visitId    String?  // Relation to VisitData
  usedAt     DateTime @default(now())
  
  user     User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  category StrataCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@unique([userId, categoryId, month])
  @@map("user_category_usage")
}

model Rules {
  id      String @id @map("_id")
  content String
  updatedAt DateTime @updatedAt

  @@map("rules")
}

model ScoringConfig {
  id                      String   @id @default(cuid()) @map("_id")
  pointsPerKm             Float    @default(2.0)
  minDistanceKm           Float    @default(3.0)
  requireAtLeastOnePlace  Boolean  @default(true)
  placeTypePoints         Json     // { "PEAK": 5.0, "TOWER": 3.0, "TREE": 2.0, "OTHER": 1.0 }
  active                  Boolean  @default(true)
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt

  @@map("scoring_configs")
}

model PlaceTypeConfig {
  id          String   @id @default(cuid()) @map("_id")
  name        String   @unique // "PEAK", "TOWER", "TREE", "OTHER" - internal name
  label       String   // "Vrchol", "Rozhledna", "Strom", "Jiné" - user-friendly label
  icon        String   // Icon name (for web: "Mountain", "Eye", etc.)
  color       String   // CSS color class (for web) or hex
  points      Float    @default(0)
  isActive    Boolean  @default(true) // removed @map("active") to match DB field isActive
  order       Int      @default(0) // display order
  createdBy   String?  // userId who created this
  updatedBy   String?  // userId who last updated this
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("place_type_configs")
}

model FormField {
  id          String   @id @default(cuid()) @map("_id")
  name        String   @unique
  label       String
  type        String   // "text", "number", "select", "checkbox", "textarea"
  placeholder String?
  required    Boolean  @default(false)
  options     Json?    // For select fields: [{ value, label }]
  order       Int      @default(0)
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("form_fields")
}

model FormConfig {
  id          String   @id @default(cuid()) @map("_id")
  slug        String   @unique
  name        String
  description String?
  definition  Json     // { steps: [{id, title, fields: [...]}] }
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("form_configs")
}

model ExceptionRequest {
  id                  String   @id @default(cuid()) @map("_id")
  userId              String
  reason              String
  requestedMinKm      Float
  status              String   @default("PENDING") // PENDING, APPROVED, REJECTED
  adminResponse       String?
  approvedById        String?
  createdAt           DateTime @default(now())
  
  user User @relation(fields: [userId], references: [id])
  
  @@map("exception_requests")
}
